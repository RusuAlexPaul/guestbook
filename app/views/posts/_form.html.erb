<%= form_with(model: post, local: true) do |form| %>
    
    <div class= "field">
        <%= form.label :name %>
        <%= form.text_field :name %>
    </div>

    <div class= "field">
        <%= form.label :email %>
        <%= form.text_field :email %>
    </div>

    <div class= "field">
        <%= form.label :url %>
        <%= form.text_field :url %>
    </div>

    <div class= "field">
        <%= form.label :body %>
        <%= form.text_area :body %>
    </div>

    <div class="actions">
        <%= form.submit %>
    </div>

    


<% end %>